<% layout("/layouts/boilerplate") %>

    <div class="text-center center-div">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weigth-bold">Login System</h2>
                <span>Log in for the existing user</span>
            </div>
            <form action="" method="" class="login-form">
                <div class="form-group form-floating mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Email">
                    <label>Email</label>
                </div>
                <div>
                    <small class="form-text text-muted text-left">Register email address</small>
                </div>
                <div class="form-group form-floating mt-3">
                    <input type="password" name="password" class="form-control" placeholder="Password">
                    <label>Password</label>
                </div>
                <button type="submit" class="btn btn-dark mt-3">Submit</button>
            </form>
        </div>
    </div>